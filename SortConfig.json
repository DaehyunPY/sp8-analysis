{
  // "working_directory": "PATH", // comment out=same path with this file
  "LMF_files": [
    "LMF_FILENAME1",
    "LMF_FILENAME2"
  ],
  "draw_canvases": true,
  "maxium_of_electron_hits": 4,
  "maxium_of_ion_hits"     : 4,
  "bunch_marker_ch": 17, // counting starts at 1
  "remove_bunch_region": [[-5000, -3000]], // [ns] comment out=off
  "electron_sorter": {
    "cmd": 1,
    // -1 = detector does not exist
    //  0 = only convert to new file format
    //  1 = sort and write new file
    //  2 = calibrate fv, fw, w_offset
    //  3 = create calibration table files
    "calibration_table": "ElecCalibTab.txt",
    "hexanode_used": true,
    "common_start_mode": true, // for TDC8HP and fADC always use true
    "channel_map": { // counting starts at 1
      "u1": 1,
      "u2": 2,
      "v1": 3,
      "v2": 4,
      "w1": 6, // HEX only
      "w2": 5, // HEX only
      "MCP": 7 // 0 if not used
    },
    "factors": {
      "offset_u": -120.0, // [ns]
      "offset_v": -125.0, // [ns]
      "offset_w": -125.0, // [ns] HEX only
      "halfwidth_u": 5.0, // [ns]
      "halfwidth_v": 5.0, // [ns]
      "halfwidth_w": 5.0, // [ns] HEX only
      "offset_x": 0.0, // [ns]
      "offset_y": 0.0, // [ns]
      "runtime": 173.0, // [ns]
      //      "runtime_u"  : 173.0,  // [ns] overwrite runtime
      //      "runtime_v"  : 173.0,  // [ns] overwrite runtime
      //      "runtime_w"  : 173.0,  // [ns] overwrite runtime
      "fu": 0.62,
      "fv": 0.598,
      "fw": 0.5915, // HEX only
      "fw_offset": -2.875 // [ns] HEX only
    },
    "MCP_radius": 63.0, // [mm] always a bit larger than the real radius
    "anode_deadtime": 20.0,
    "MCP_deadtime": 20.0,
    "correct_timesum": false, // use position depended correction of timesums
    "correct_position": false // use position depended NL correction of position"
  },
  "ion_sorter": {
    "cmd": 1,
    // -1 = detector does not exist
    //  0 = only convert to new file format
    //  1 = sort and write new file
    //  2 = calibrate fv, fw, w_offset
    //  3 = create calibration table files
    "calibration_table": "IonCalibTab.txt",
    "hexanode_used": true,
    "common_start_mode": true, // for TDC8HP and fADC always use true
    "channel_map": { // counting starts at 1
      "u1": 10,
      "u2": 11,
      "v1": 12,
      "v2": 13,
      "w1": 15, // HEX only
      "w2": 14, // HEX only
      "MCP": 16 // 0 if not used
    },
    "factors": {
      "offset_u": -130.4, // [ns]
      "offset_v": -122.6, // [ns]
      "offset_w": -130.0, // [ns] HEX only
      "halfwidth_u": 5.0, // [ns]
      "halfwidth_v": 5.0, // [ns]
      "halfwidth_w": 5.0, // [ns] HEX only
      "offset_x": 0.0, // [ns]
      "offset_y": 0.0, // [ns]
      "runtime": 119.0, // [ns]
      //      "runtime_u"  : 119.0,  // [ns] overwrite runtime
      //      "runtime_v"  : 119.0,  // [ns] overwrite runtime
      //      "runtime_w"  : 119.0,  // [ns] overwrite runtime
      "fu": 0.66,
      "fv": 0.7125,
      "fw": 1.675, // HEX only
      "fw_offset": 1.675// [ns] HEX only
    },
    "MCP_radius": 43.0, // [mm] always a bit larger than the real radius
    "anode_deadtime": 20.0,
    "MCP_deadtime": 20.0,
    "correct_timesum": false, // use position depended correction of timesums
    "correct_position": false // use position depended NL correction of position"
  }
}
